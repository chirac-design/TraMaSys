@model SysMaTra.Models.Bagage

@{
    ViewData["Title"] = "Edit";
}
<div class="bg-gradient-primary">
    <div class="container ">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    @*<img class="col-lg-5 d-none d-lg-block bg-register-image" src="img/bg_img.png "/>*@
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Ajouter un Bagage!</h1>
                            </div>
                            <form id="address-form" class="user" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="Poids" class="control-label"></label>
                                    <input asp-for="Poids" class="form-control" />
                                    <span asp-validation-for="Poids" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Image" class="control-label"></label>
                                    <input asp-for="Image" type="file" class="form-control" />
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PassagerId" class="control-label"></label>
                                    <select asp-for="PassagerId" class="form-control" asp-items="ViewBag.PassagerId"></select>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                                    </div>
                                    <div class="col-sm-6">
                                        <a class="btn btn-danger form-control" asp-action="Index">Retour</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
